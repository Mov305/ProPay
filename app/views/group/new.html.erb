<div
  class="w-[100vw] p-5 bg-[#3778c2] text-gray-200 text-xl "
>
  <%= link_to group_index_path do %>
  <span class="p-4 text-2xl text-gray-200/75 hover:text-gray-200">
    &#8592;
  </span>
  <% end %>
</div>
<section class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8 md:w-1/2">
  <div class="mx-auto max-w-lg text-center pt-16">
    <h1 class="text-2xl font-bold sm:text-3xl">New Group</h1>
  </div>

  <%= form_with model: @group, url: group_index_path , method: :post, class:"mx-auto mt-8 mb-0
  max-w-md space-y-4" do |f| %>
  <div>
    <%= f.label :name, class:"sr-only" %>

    <div class="relative">
      <%= f.text_field :name, class:"w-full rounded-lg border-gray-200 p-4 pr-12 text-sm shadow-sm",
      placeholder:"Group Name" %>
    </div>
  </div>

  <div>
    <%= f.label :icon, class:"sr-only" %>

    <div class="relative">
      <%= f.text_field :icon, class:"w-full rounded-lg border-gray-200 p-3 text-sm",
      placeholder:"Enter the Icon Url" %>
    </div>
  </div>

  <div class="flex items-center justify-center">
    <%= f.submit "SUBMIT", class:"inline-block rounded-lg bg-blue-500 px-5 py-3 text-sm font-medium
    text-white" %>
  </div>
  <% end %>
</section>
