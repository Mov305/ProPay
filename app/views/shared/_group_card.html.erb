<%= link_to group_path(group), class:"flex bg-white p-2 w-11/12 max-w-lg rounded-lg gap-2 shadow-md hover:shadow-lg" do %>
    <img src= <%= group.icon %> alt= <%= group.name %> class="h-24 w-24 rounded-lg" />

    <div class="flex flex-col flex-1 justify-between p-2">
        <div class="flex border-b border-slate-400/50 justify-between">
            <span class="text-lg font-medium text-gray-900">
                <%= group.name %>
            </span>
            <span>
               $ <%= group.payments.sum(:amount) %>
            </span>

        </div>
        <span class="text-sm text-gray-500">
            <%= group.created_at.strftime("%B %d, %Y") %>
        </span>
    </div>
<% end %>